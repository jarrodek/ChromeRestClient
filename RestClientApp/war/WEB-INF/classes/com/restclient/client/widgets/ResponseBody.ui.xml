<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.rawBodyPadding{
			padding-right: 14px !important;
		}
		.plainPanel{
			white-space: pre;
			margin: 1em 0px;
			font-family: monospace;
			overflow: auto;
		}
	</ui:style>
	<g:TabLayoutPanel ui:field="bodyPanel" barHeight="2" barUnit="EM" width="100%">
		<g:tab>
			<g:header size='7'>Raw response</g:header>
			<g:SimplePanel styleName="{style.rawBodyPadding}">
				<g:HTML width="100%" ui:field="plainBody" styleName="{style.plainPanel}"></g:HTML>
			</g:SimplePanel>
		</g:tab>
		<g:tab>
			<g:header>Parsed response</g:header>
			<g:HTMLPanel width="100%" height="100%" ui:field="parsedPanel">
				<g:Anchor ui:field="parsedOpen" href="#">Open output in new window</g:Anchor>
				<br />
				<span class="CodeMirror">
					<div class="lines"></div>
					<pre ui:field="parsedBody" class="cm-s-default"></pre>
				</span>
				<div>
					Code highlighting thanks to
					<a href="http://codemirror.net/">Code Mirror</a>
				</div>
			</g:HTMLPanel>
		</g:tab>
		<g:tab>
			<g:header>JSON</g:header>
			<g:HTMLPanel ui:field="jsonPanel"/>
		</g:tab>
		<g:tab>
			<g:header>XML</g:header>
			<g:HTMLPanel ui:field="xmlPanel"/>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder> 