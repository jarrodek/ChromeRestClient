<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui='urn:ui:com.google.gwt.uibinder' 
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style 
		type="com.restclient.client.widgets.HistoryListWidget.WidgetStyle" 
		src="../resources/cellListResources.css">
		.itemRow {
			border-bottom: 1px solid #EEE;
			padding: 5px;
		}
		.itemCell{
			font-size: 14px;
			padding: 5px;
			margin-right: 5px;
			-webkit-box-align: center;
		}
		.itemCell:last-child {
			margin-right: 0;
		}
		.flex {
			display: -webkit-box;
		}
		
		.cellListEmptyNote {
			padding: 10px 20px 10px 13px;
			background-color: rgb(245, 245, 245);
			margin: 20px;
			text-align: center;
			border-bottom: 1px solid #E4E4E4;
			border-top: 1px solid #E4E4E4;
			color: #333;
			font-weight: bold;
		}
		
		.methodCell{
			width: 80px;
			-webkit-box-ordinal-group: 1;
		}
		.urlCell{
			width: auto;
			white-space: nowrap;
			height: 1.1em;
			overflow: hidden;
			text-overflow: ellipsis;
			-webkit-box-ordinal-group: 3;
			-webkit-box-flex: 1;
		}
		.actionCell{
			-webkit-box-ordinal-group: 4;
			width: 100px;
			-webkit-box-pack: end;
		}
		.timeCell {
			-webkit-box-ordinal-group: 2;
			width: 150px;
			-webkit-box-pack: end;
			padding-right: 20px;
		}
		.hidden{
			display: none;
			visibility: hidden;
			height: 0px;
		}
		.descRow{
			display: none;
		}
		.encodingCell{
			width: 150px;	
		}
		.headersCell{
			width: 440px;
			display: -webkit-box;
			-webkit-box-orient: vertical;
			-webkit-box-align:start;
			-webkit-box-pack:start;
		}
		.bodyCell{
			width: 515px;
		}
		.headerInnerRow{
			display: block;
			width: 100%;
			text-overflow: ellipsis;
			height: 1.2em;
			white-space: nowrap;
			overflow: hidden;
		}
		
		.descRowOpened {
			display: -webkit-box !important;
			background-color: white;
			color: black;
		}
		.pager{
			display: -webkit-box;
			display: -moz-box;
		}
		.controls{
			display: -webkit-box;
			-webkit-box-ordinal-group: 1;
			-moz-box-ordinal-group: 1;
			-webkit-box-align: center;
			-moz-box-align: center;
			margin: 12px 10px;
		}
		.pagerWrapper{
			width: auto;
			white-space: nowrap;
			-webkit-box-ordinal-group: 2;
			-webkit-box-flex: 1;
			-webkit-box-pack: center;
			-webkit-box-align: center;
			-moz-box-ordinal-group: 2;
			-moz-box-flex: 1;
			-moz-box-pack: center;
			-moz-box-align: center;
			display: -moz-box;
			display: -webkit-box;
		}
	</ui:style>

	<g:HTMLPanel ui:field="bodyPanel">
		<div class="{style.pager}">
			<div class="{style.controls}">
				<g:Button ui:field="clearHistory" text="Clear history"></g:Button>
			</div>
			<div class="{style.pagerWrapper}">
				<c:SimplePager ui:field="pager"/>
			</div>
		</div>
		<c:CellList width="100%" ui:field="historyList"></c:CellList>
	</g:HTMLPanel>
</ui:UiBinder>
