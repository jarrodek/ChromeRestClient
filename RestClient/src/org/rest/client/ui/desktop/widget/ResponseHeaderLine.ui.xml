<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style type="org.rest.client.ui.desktop.widget.ResponseHeaderLine.LineStyle">
		.helpDescItem {
			border-left: 1px #E5E5E5 solid;
			margin: 2em;
			display: block;
			margin-top: 1em;
			margin-bottom: 1em;
			padding: 0 1em;
			padding-bottom: 0.5em;
		}
		
		.hdExample {
			font-style: italic;
			border: 1px grey solid;
			display: inline-block;
			padding: 3px 4px;
			border-radius: 3px;
			margin-left: 10px;
		}
		
		.hdExample:before {
			content: "eg. ";
		}
		
		.hdName {
			display: block;
			font-weight: bold;
			font-size: medium;
		}
		
		.hintWrapper > div,
		.hintWrapper > a {
			font-size: 12px;
			text-decoration: none;
		}
		.hintTitle {}
		.opened {}
		.hintWrapper.opened > .hintTitle:after,
		.hintWrapper > a.hintTitle:hover:after {
			opacity: 1;
		}
		.hintWrapper.opened > a.hintTitle:after {
			content: none;
		}
		.hintInfo {
			display: none;
			overflow: hidden;
			height: 0px;
			display: block;
			-webkit-transition: height 0.3s ease;
		}
		.hdDesc{}
		.hintHandler{
			background-image: url(data:image/png;base64,);
			-webkit-transition: opacity 0.25s ease;
			opacity: 0.3;
			display: inline-block;
			width: 12px;
			height: 12px;
			cursor: pointer;
			background-size: contain;
			background-repeat: no-repeat;
		}
		.hintHandler:hover{
			opacity: 0.7;
		}
		.hintWrapper.opened .hintHandler{
			opacity: 1;
		}
		.headerNameTitle{
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.hintWrapper}">
		
		<div class="{style.hintTitle}" >
			<span ui:field="headerNameTitle" class="{style.headerNameTitle}"></span>: 
			<span ui:field="headerValueTitle"></span>
			<g:Anchor ui:field="hintHandler" addStyleNames="{style.hintHandler}"></g:Anchor>
		</div>
		
		
		<div class="{style.hintInfo}" style="display:none;" ui:field="hintParent">
			<span class="{style.helpDescItem}">
				<span class="{style.hdName}" ui:field="headerName"></span>
				<br />
				<span class="{style.hdDesc}" ui:field="desc"></span>
				<span class="{style.hdExample} hidden" ui:field="example"></span>
			</span>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>